{
    "name": "teamsfx",
    "scripts": {
        "setup": "npm install && npm run bootstrap --hoist",
        "setup-failpoint": "npm run setup && npx lerna run build-failpoint",
        "bootstrap": "lerna bootstrap",
        "lint:staged": "lerna run lint:staged --stream",
        "lint": "lerna run lint --stream",
        "version": "lerna bootstrap --ignore-scripts -- --package-lock-only --no-audit && git add packages/*/package-lock.json",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.0.1",
        "@commitlint/config-conventional": "^12.0.1",
        "lerna": "^4.0.0",
        "husky": "^6.0.0"
    },
    "bin": {
        "teamsfx": "./packages/cli/cli.js"
    }
}
